{
  "name": "@eamode/eang",
  "version": "4.0.0-alpha",
  "description": "Webcomponent eang-layout following open-wc recommendations",
  "author": "eang-layout",
  "license": "MIT",
  "main": "lib/index.js",
  "module": "lib/index.js",
  "scripts": {
    "start": "npm run css && tsc && concurrently -k -r \"npm run css:watch\" \"tsc --watch --preserveWatchOutput\" \"wds\"",
    "prebuild": "rimraf ./lib",
    "build": "npm run css && tsc",
    "prepublish": "tsc",
    "lint": "eslint --ext .ts,.html . --ignore-path .gitignore && prettier \"**/*.ts\" --check --ignore-path .gitignore",
    "format": "eslint --ext .ts,.html . --fix --ignore-path .gitignore && prettier \"**/*.ts\" --write --ignore-path .gitignore",
    "test": "tsc && wtr --coverage",
    "test:watch": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wtr --watch\"",
    "storybook": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wds -c .storybook/server.mjs\"",
    "storybook:build": "tsc && build-storybook",
    "precss": "rimraf ./lib/css ./lib/themes",
    "css": "npm run css:copy && postcss \"./themes/*.css\" --dir ./lib/css && postcss --no-map \"./themes/mode/!(*-mixin*)\" --dir ./lib/css/mode",
    "css:copy": "cpx \"themes/**/*\" \"lib/themes\"",
    "css:js": "node cssToLitHtml.js",
    "css:watch": "concurrently -k -r \"npm run css -- -w\" \"npm run css:copy -- -w\" \"onchange './lib/css/**/*' -- npm run css:js\" "
  },
  "dependencies": {
    "lit-html": "^1.1.2",
    "lit-element": "^2.2.1"
  },
  "devDependencies": {
    "@open-wc/eslint-config": "^4.2.0",
    "@open-wc/testing": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "@web/dev-server": "^0.1.1",
    "@web/dev-server-storybook": "^0.3.2",
    "@web/test-runner": "^0.11.5",
    "concurrently": "^5.3.0",
    "cpx": "^1.5.0",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.11.0",
    "husky": "^1.0.0",
    "lint-staged": "^10.0.0",
    "onchange": "^7.1.0",
    "postcss": "^8.2.4",
    "postcss-assets": "^5.0.0",
    "postcss-cli": "^8.3.1",
    "postcss-import": "^14.0.0",
    "postcss-mixins": "^7.0.2",
    "postcss-nested": "^5.0.3",
    "prettier": "^2.0.4",
    "rimraf": "^3.0.2",
    "tslib": "^2.0.3",
    "typescript": "^4.1.3"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "wc/guard-super-call": "off",
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": [
        "error"
      ],
      "import/no-unresolved": "off",
      "import/extensions": [
        "error",
        "always",
        {
          "ignorePackages": true
        }
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid",
    "semi": false
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
